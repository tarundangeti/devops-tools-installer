pipeline {
    agent any
    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/tarundangeti/Task-track.git'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Deploy_With_Ansible') {
            steps {
                echo "Deploying to Tomcat using Ansible"
                // Example:
                // sh 'ansible-playbook deploy.yml -i inventory'
            }
        }
    }
}
